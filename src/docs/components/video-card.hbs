<!DOCTYPE html>
<html>

<head>
    {{> html-head title="Video Card" }}
</head>

<body>
    <div class="mt-4 container">
        <div class="row">
            <h1 class="col-12">Video Card & Modal</h1>
        </div>
    </div>
	<div class="mt-4 py-4">
        <div class="container">
            <div class="col-12 col-lg-6 video-card">
                <picture class="position-relative sni-after sni__play" data-toggle="modal" data-target="#videoCardModal">
                    <source srcset="https://via.placeholder.com/600x600" media="(min-width: 992px)">
                    <img src="https://via.placeholder.com/345x345" alt="Placeholder" class="d-block w-100">
                </picture>
            </div>

            {{> components/video-modal}}
        </div>
    </div>
    {{> js jquery=true bootstrap=true main=true }}
</body>
