<!DOCTYPE html>
<html>

<head>
	{{> html-head title="Product Card" }}
</head>

<body>
	<div class="container text-center my-5">

		<h2 class="h1 mb-4">Customers also bought</h2>

        <div id="carouselLoop" class="carousel slide carousel--loop row mb-4" data-slide-number="4">
			<div class="carousel--centered">
				<div class="carousel-inner d-flex flex-nowrap" role="listbox">
                    {{#times 8}}
                    {{> compounds/product-card-featured active=@first index=@index carousel="carousel-item"}}
                    {{/times}}
				</div>
			</div>

			<a class="carousel-control carousel-control-prev carousel-control--background carousel-control--loop" href="#carouselLoop" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon sni sni__chevron-prev justify-content-center align-items-center" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control carousel-control-next carousel-control--background carousel-control--loop" href="#carouselLoop" role="button" data-slide="next">
				<span class="carousel-control-next-icon sni sni__chevron-next justify-content-center align-items-center" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>


		</div>
        <a href="#" class="btn btn-outline-primary col-9 col-lg-3 mx-auto">Shop All</a>
	</div>

	{{> js jquery=true bootstrap=true main=true yotpo=true }}
</body>

</html>
