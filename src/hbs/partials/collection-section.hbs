<div class="mobile-wrapper {{ class }}">
	<div class="container">
		<div class="d-flex justify-content-between mb-2">
			<h2 class="h1">{{ title }}</h2>
			<button class="btn btn-lg btn-primary d-none d-lg-block">{{ button }}</button>
		</div>

		<div class="row">
			<div class="d-none d-lg-block col-lg-3">
				<img src="https://via.placeholder.com/800x850/{{ color }}/fff" alt="Placeholder" class="d-block w-100">
			</div>
			{{> product-card class="col-6 col-lg-3" color=color}}
			{{> product-card class="col-6 col-lg-3" color=color}}
			{{> product-card class="col-6 col-lg-3" color=color}}
			{{> product-card class="col-6 col-lg-3 d-lg-none" color=color}}
		</div>

		<div class="d-flex justify-content-center d-lg-none">
			<button class="btn btn-lg btn-primary">{{ button }}</button>
		</div>
	</div>
</div>
