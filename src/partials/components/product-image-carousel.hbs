<div class="product-image-carousel__container col-12 col-lg-6 order-lg-2">
	<figure id="product-image-carousel{{#if num}}{{num}}{{/if}}" class="product-image-carousel carousel slide mb-3 no-gutters__in-container d-lg-flex flex-column" data-ride="carousel" data-interval="false" data-indicator="#product-image-carousel__indicator{{#if num}}{{num}}{{/if}}">

		<div class="carousel-inner order-lg-2">
			{{#times totalSlide}}
			<img class="carousel-item {{#if @first}}active{{/if}}" src="https://via.placeholder.com/750x750/?text={{@index}}" alt="Slide {{@index}}">
			{{/times}}
		</div>
		<figcaption class="text-center font-size-sm py-1 text-white {{ rangeclass }}">
			Best for Pore Refining
		</figcaption>
	</figure>
</div>

<div id="product-image-carousel__indicator{{#if num}}{{num}}{{/if}}" class="product-image-carousel__indicator col-12 col-lg-1 order-lg-1 carousel slide carousel--loop mb-1" {{#if (gt totalSlide 5)}}data-slide-number="5" data-ride="carousel" data-interval="false"{{/if}}>
	<div class="carousel-inner d-flex flex-nowrap flex-lg-column {{#if (gt totalSlide 5)}}{{else}}justify-content-center justify-content-lg-start{{/if}}">
		{{#times totalSlide}}
		<div class="product-image-carousel__indicator__item carousel-item {{#if @first}}active{{/if}} col-12 px-lg-0 pb-lg-2 mw-100" data-target="#product-image-carousel{{#if num}}{{num}}{{/if}}" data-slide-to="{{minus @index 1}}" data-index="{{@index}}">
			<button class="btn-unstyled m-0 border d-block {{#if @first}}border-secondary{{else}}border-white{{/if}}">
				<img class="img-fluid mx-auto d-block" src="https://via.placeholder.com/150x150/?text={{@index}}" alt="Slide {{@index}}">
			</button>
		</div>
		{{/times}}
	</div>
</div>
