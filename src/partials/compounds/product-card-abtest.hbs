<figure class="product-card position-relative col-6 col-lg-3 px-lg-hg d-flex flex-column pb-2 {{ class }}">
	<a href="">
		<noscript class="loading-lazy">
		<picture class="embed-responsive bg-shimmer">
			<img src="https://via.placeholder.com/444x558{{# if color}}/{{ color }}/fff{{/if}}" alt="Placeholder" class="d-block w-100 embed-responsive-item fit--cover" loading="lazy">
			<img src="https://via.placeholder.com/444x558" alt="Secondary Image" class="img--hover w-100 embed-responsive-item fit--cover" loading="lazy">
		</picture>
		</noscript>
	</a>
	<figcaption class="mt-2 flex-grow-1 d-flex flex-column">
		<form class="product-card-form flex-grow-1 d-flex flex-column h-100">
			<input type="hidden" name="id" value="variantId" />
			<input type="hidden" name="quantity" value="1" />
			{{# if badge}}<span class="badge badge-light position-absolute">{{ badge }}</span>{{/if}}
			<p class="product-card__text-sm mb-2 text-muted">Tasmanian Spring Water</p>
			<a href="#" class="product-card__text mb-2 font-weight-bold">{{# if title}}{{ title }}{{ else }}Hydration Boost Cream{{/if}}</a>

			<div class="mb-2 flex-grow-1 align-items-center">
				{{!-- DEV --}}
				<div class="react-yotpo-star" data-product-id="4633315409991" data-hide-stars="true"></div>
				{{!-- US --}}
				{{!-- <div class="react-yotpo-star" data-product-id="3595105992809" data-hide-stars="true"></div> --}}
			</div>

			<p class="product-card__text mb-2">
				<span class="font-weight-bold">$39.73</span>
				<span class="text-muted text-linethrough">$39.73</span>
			</p>
			<button class="btn btn-block btn-primary" type="submit">Add to cart</button>
		</form>
	</figcaption>
</figure>
