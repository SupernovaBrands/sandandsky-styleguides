<div {{#if id}}id="{{ id }}"{{/if}} class="{{ class }}">
	<div class="container d-flex justify-content-between align-items-start px-g mb-3">
		<h2 class="h1 mb-0">{{ header }}</h2>
		<a href="{{ href }}" class="btn btn-lg btn-primary d-none d-lg-block">{{ button }}</a>
	</div>

	<div class="carousel--scroll position-relative px-g">
		<div class="carousel-inner d-flex flex-nowrap row w-auto" role="listbox">
			{{#if @partial-block}}{{> @partial-block }}{{/if}}
		</div>

		<div class="container px-0 px-lg-g">
			<div class="scrollbar mt-3">
				<div class="scrollbar--thumb"></div>
			</div>
		</div>

		<a class="carousel-control-prev text-body d-none" role="button">
			<span
				class="carousel-control-prev-icon carousel-control--background sni sni__chevron-prev justify-content-center align-items-center"
				aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next text-body" role="button">
			<span
				class="carousel-control-next-icon carousel-control--background sni sni__chevron-next justify-content-center align-items-center"
				aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>

	<div class="d-flex justify-content-center d-lg-none mt-4">
		<a href="{{ href }}" class="btn btn-lg btn-primary">{{ button }}</a>
	</div>
</div>
