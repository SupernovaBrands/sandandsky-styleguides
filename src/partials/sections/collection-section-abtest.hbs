<div class="collection-section collection-section-abtest container px-g {{ class }} d-none">
	<div class="collection-section__header d-flex align-items-start mb-2 justify-content-between">
		<img class="svg mr-2 mr-lg-3 mt-lg-1 text-{{#if (eq range 'apc')}}secondary{{else}}{{range}}{{/if}}" src="icons/range-{{range}}.svg" replace-to-svg />
		<h2 class="h1 mb-0 flex-lg-grow-1">{{ header }}</h2>
		<a href="" class="btn btn-lg btn-primary d-none d-lg-block">{{ button }}</a>
	</div>
    <h4 class="flex-grow-1 mb-3 ml-auto text-{{#if (eq range 'apc')}}secondary{{else}}{{range}}{{/if}}">{{ subtitle }}</h4>
	<div class="row">
		<div class="collection-section__cover d-none d-lg-block col-lg-3">
			<noscript class="loading-lazy">
			<img src="https://via.placeholder.com/900x522/" alt="Placeholder" class="d-block w-100" loading="lazy">
			<img src="{{ imageUrl }}/decor-range-{{ range }}.svg" alt="Decor" class="mt-n3" loading="lazy">
			</noscript>
		</div>
		{{> compounds/product-card class="col-6 col-lg-3 mb-3" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3 mb-3" title="Hydration Boost Cream Moisturiser (2 lines)" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3 mb-3" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3 mb-3 d-lg-none" color=color}}
	</div>

	<div class="d-flex justify-content-center d-lg-none mb-5">
		<a href="" class="btn btn-lg btn-primary">{{ button }}</a>
	</div>

	<hr>
</div>
