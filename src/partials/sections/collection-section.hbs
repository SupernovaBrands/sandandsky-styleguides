<div class="collection-section container px-g py-3 {{ class }}">
	<div class="d-flex align-items-start mb-2 sni sni__range-{{range}}">
		<h2 class="h1 flex-grow-1 mb-lg-0">{{ title }}</h2>
		<button class="btn btn-lg btn-primary d-none d-lg-block">{{ button }}</button>
	</div>

	<div class="row">
		<div class="collection-section__cover d-none d-lg-block col-lg-3">
			<img src="https://via.placeholder.com/800x560/{{ color }}/fff" alt="Placeholder" class="d-block w-100">
			<img src="https://via.placeholder.com/120x120/?text=decor" alt="Decor" class=" mt-n3">
		</div>
		{{> compounds/product-card class="col-6 col-lg-3" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3 d-lg-none" color=color}}
	</div>

	<div class="d-flex justify-content-center d-lg-none mb-3">
		<button class="btn btn-lg btn-primary">{{ button }}</button>
	</div>

	<hr class="border-top mb-0">
</div>
