<div class="collection-section container px-g {{ class }}">
	<div class="d-flex align-items-start mb-3 sni sni__range-{{range}}">
		<h2 class="h1 flex-grow-1 mb-0">{{ header }}</h2>
		<button class="btn btn-lg btn-primary d-none d-lg-block">{{ button }}</button>
	</div>

	<div class="row">
		<div class="collection-section__cover d-none d-lg-block col-lg-3">
			<img src="https://via.placeholder.com/800x560/" alt="Placeholder" class="d-block w-100">
			<img src="{{ imageUrl }}/decor-range-{{ range }}.svg" alt="Decor" class=" mt-n3">
		</div>
		{{> compounds/product-card class="col-6 col-lg-3 mb-3" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3 mb-3" title="Hydration Boost Cream Moisturiser (2 lines)" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3 mb-3" color=color}}
		{{> compounds/product-card class="col-6 col-lg-3 mb-3 d-lg-none" color=color}}
	</div>

	<div class="d-flex justify-content-center d-lg-none mb-4">
		<button class="btn btn-lg btn-primary">{{ button }}</button>
	</div>

	<hr class="border-top mb-0">
</div>
